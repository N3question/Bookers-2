<h2>Books</h2>
<table class="table table-striped">
  <thead> 
    <tr> <th></th> <th>Title</th> <th>Opinion</th> </tr> 
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.profile_image, size: "100x100" %>
        <% end %><br>
        <%= link_to user_path(book.user_id) do %>
          <%= book.user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do%>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>