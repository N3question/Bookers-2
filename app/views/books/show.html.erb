<p class="notice"></p>
  <% if @book.errors.any? %>
    <%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
<div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">
      <h2>User info</h2>
        <% if @book.user.profile_image.attached? %>
          <%= image_tag @book.user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr><br>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table><br>
        
        <div class="row">
          <%= link_to edit_user_path(@book.user_id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
      
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @new_book do |f| %>
  
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class:"form-control book_title" %>
          </div>
          <div class="form-group">
            <label>Opinion</label>
            <%= f.text_area :body, class:"form-control book_body" %>
          </div>
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        
        <% end %>
    </div>
    
    <!--ここまで-->
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <td>
          <%= link_to user_path(@book.user_id) do %>
            <%= image_tag @book.user.profile_image, size: "100x100" %>
          <% end %><br>
          <%= link_to user_path(@book.user_id) do %>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>
          <% if @book.user_id == current_user.id %>
            <%= link_to "Edit", edit_book_path, class:"btn btn-success" %>
          <% end %>
        </td>
        <td>
          <% if @book.user_id == current_user.id %>
            <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
          <% end %>
        </td>
      </table>
    </div>
    
  </div>
</div>