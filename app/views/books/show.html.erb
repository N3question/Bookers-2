<h1>Book detail</h1>

<% if @user.profile_image.attached? %>
  <%= image_tag @user.profile_image, size: "100x100" %>
<% else %>
  <%= image_tag 'no_image', size: "100x100" %>
<% end %>
<a href="/users/#{current_user.id}"><%= user.name %></a>
  
<p><%= @book.title %></p>
<p><%= @book.body %></p>
<div>
  <% if @book.user_id == current_user.id %>
    <%= link_to "Edit", edit_book_path %>
  <% end %>
</div>
<div>
  <% if @book.user_id == current_user.id %>
    <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %>
  <% end %>
</div>